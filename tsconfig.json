{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "typeRoots": ["./node_modules/@types"],
    // this can not be set to es6 because of binaryen
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
